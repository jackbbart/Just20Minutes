<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HowDidItGoButtons">

    <Button
        android:id="@+id/toRelaxTimerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I need a break"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wentWellButton" />

    <Button
        android:id="@+id/wentWellButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="That went well!"
        app:layout_constraintBottom_toTopOf="@+id/toRelaxTimerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_howDidItGo_timer" />

    <Button
        android:id="@+id/button_howDidItGo_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/wentWellButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar_howDidItGo_timer"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/button_howDidItGo_timer"
        app:layout_constraintEnd_toEndOf="@+id/button_howDidItGo_timer"
        app:layout_constraintStart_toStartOf="@+id/button_howDidItGo_timer"
        app:layout_constraintTop_toTopOf="@+id/button_howDidItGo_timer" />
</androidx.constraintlayout.widget.ConstraintLayout>